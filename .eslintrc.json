{
  "root": true,
  "env": {
    "node": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended",
    "prettier",
    "airbnb-base",
    "airbnb-typescript/base"
  ],
  "ignorePatterns": ["dist/**/*", "__mock__"],
  "overrides": [
    {
      "files": ["src/**/*.spec.ts", "seed/**/*.spec.ts"],
      "env": {
        "jest": true
      }
    }
  ],
  "rules": {
    "@typescript-eslint/semi": ["error", "never"],
    "@typescript-eslint/no-explicit-any": "error",
    "no-console": "off"
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  }
}
