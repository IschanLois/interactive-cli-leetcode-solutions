{
  "root": true,
  "env": {
    "node": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended",
    "prettier",
    "airbnb-base",
    "airbnb-typescript/base"
  ],
  "ignorePatterns": ["dist/**/*"],
  "rules": {
    "@typescript-eslint/semi": ["error", "never"],
    "@typescript-eslint/no-explicit-any": "error"
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  }
}
