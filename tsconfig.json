{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "types": ["node", "jest", "inquirer"]
  },
  "exclude": ["node_modules", "dist", "build"],
  "include": ["*.ts", "seed/**/*.ts", "src/**/*.ts"]
}
