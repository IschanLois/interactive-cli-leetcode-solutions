{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "types": ["node", "jest", "inquirer"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "./*.js",
  ],
  "include": [
    "seed/**/*.ts",
    "src/**/*.ts"
  ]
}
